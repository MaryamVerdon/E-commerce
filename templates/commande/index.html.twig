{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}

    <div class="commande">
        <div>
        <div>Montant Total : {{prixTot}}</div>
        </div>
        <div>
            <h1 style='font-size:30px;'>Adresse de livraison</h1>
            <select id='adresse'>
                {% for adresse in adresses %}
                    <option value={{adresse.id}}>{{adresse.adresse}}</option>
                {% endfor %}
                    <option value="new">Nouvelle adresse</option>
            </select>
        </div>
        <div class="form-new-adresse" style="display: none;">
            {{ form(form) }}
        </div>
        <div><button id='valide' >Valider la commande</button></div>
</div>
{% endblock %}
{% block javascripts %}<script src="/js/validationCommande.js"></script>{% endblock %}

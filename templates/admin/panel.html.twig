{% block stylesheets %}<link rel="stylesheet" href="/css/admin/panel.css"/>{% endblock %}

{% block panel %}
    <div class="panel  border-bottom">
        <div class="d-flex">
            <div class="dropdown mr-1">
                <button type="button" class="btn btn-outline-dark" onClick='{window.location="/admin"}'><i class="fas fa-home"></i> Acceuil</button>
            </div>
            <div class="dropdown mr-1">
                <button type="button" class="btn btn-outline-dark" onClick='{window.location="/admin/commande"}'><i class="fas fa-clipboard-list"></i> Commandes</button>
            </div>
            <div class="btn-group mr-1">
                <button type="button" class="btn btn-outline-dark" onClick='{window.location="/admin/article"}'><i class="fas fa-tshirt"></i> Articles</button>
                <button type="button" class="btn btn-outline-dark dropdown-toggle dropdown-toggle-split" id="dropdownMenuReference" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent">
                <span class="sr-only">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                <a class="dropdown-item" href="/admin/article/new">Nouvel Article</a>
                </div>
            </div>
            <div class="dropdown mr-1">
                <button type="button" class="btn btn-outline-dark" onClick='{window.location="/admin/client"}'><i class="fas fa-users"></i> Clients</button>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}{{ block("stylesheets", "/admin/panel.html.twig") }}<link rel="stylesheet" href="/css/commande.css"/>{% endblock %}

{% block body_top %}
{{ block("panel", "/admin/panel.html.twig") }}
{% endblock %}

{% block body %}

<h3 class="col-3 text-center border border-dark mb-4 mt-4 p-1">Liste des clients</h3>
<div>
    <table id="table-clients" class="container table table-hover">
        <thead class="clients-head">
            <tr class="table-active">
                <th class="th-tri">N°<i class="fas fa-sort"></i><input type="hidden" value="id.ASC"></th>
                <th class="th-tri">Nom<i class="fas fa-sort"></i><input type="hidden" value="nom.ASC"></th>
                <th class="th-tri">Prenom<i class="fas fa-sort"></i><input type="hidden" value="prenom.ASC"></th>
                <th class="th-tri">Email<i class="fas fa-sort"></i><input type="hidden" value="email.ASC"></th>
            </tr>
        </thead>
        <tbody id="tbody-clients">
        </tbody>
        <tfoot id="tfoot-clients">
            <tr class="table-active">
                <td colspan="4" class="text-center">
                    <button class="btn btn-light" id="precedent">Précédent</button>
                    <span id="page"></span>
                    <button class="btn btn-light" id="suivant">Suivant</button>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

{% endblock %}
{% block javascripts %}<script src="/js/admin/client.js"></script>{% endblock %}


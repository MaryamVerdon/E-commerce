{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="/css/article.css"/>{% endblock %}

{% block body %}
{% include '/admin/panel.html' %}

<div class="list-articles">
    {% for article in articles %}
        <div class="item-article">
            <div class="item-article" onClick={window.location="{{ path('admin_article_show', {id: article.id}) }}"}>
                <div class="libelle-article">{{ article.libelle }}</div>
                <div class="image-article"><img src="{{ article.image }}"/></div>
                <div class="description-article">{{ article.description }}</div>
                <div class="prix-article">{{ article.prixU }}$</div>
            </div>
            <div class="buttons-article>">
                <button class="modify-article" onClick={window.location="{{ path('admin_article_edit', {id: article.id}) }}"}>Modifier</button>
                <button class="remove-article" onClick={window.location="{{ path('admin_article_remove', {id: article.id}) }}"}>Supprimer</button>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
{% block javascripts %}{% endblock %}
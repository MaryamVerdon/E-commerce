{% extends 'base.html.twig' %}


{% block body %}

    <h1>Nouvel(le) utilisateur(-trice)</h1>
    <p>Ecrivez vos informations personnelles</p>

    {{ form_start(form) }}
    {{ form_row(form.email, {'label' : 'Email', 'attr' : {'placeholder' : 'Adresse email...' }}) }}
    {{ form_row(form.password, {'label' : 'Mot de passe'}) }}
    {{ form_row(form.confirm_password, {'label' : 'Confirmer le mot de passe'}) }}
    {{ form_row(form.nom, {'label' : 'Nom'}) }}
    {{ form_row(form.prenom, {'label' : 'Prenom'}) }}

    <button type="submit">Enregistrer</button>
    {{ form_end(form) }}

{% endblock %}
